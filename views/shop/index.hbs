<main>
	{{#if prods.length}}
		<div class='grid'>
			{{#each prods}}
				<article class='card product-item'>
					<header class='card__header'>
						<h1 class='product__title'>
							{{this.title}}
						</h1>
					</header>
					<div class='card__image'>
						<img src={{this.imageUrl}} alt={{this.title}} />
					</div>
					<div class='card__content'>
						<h2 class='product__price'>{{this.price}}$</h2>
						<p class='product__description'>
							{{#reduceDescription this.description}}{{/reduceDescription}}
						</p>
					</div>
					<div class='card__actions'>
					{{#if ../isAuthenticated}}
						{{> add-to-cart}}
					{{/if}}
					</div>
				</article>
			{{/each}}
		</div>
	{{else}}
		<h1>No products yet...</h1>
	{{/if}}
	<div class="pagination-area">
		{{#if hasPreviousPage}}
			<a href="/?page={{previousPage}}" id="prev">Prev</a>
		{{/if}}
		{{#isNotEqual currentPage 1}}
			<a href="/?page=1">1</a>
		{{/isNotEqual}}
		<a href="/?page={{currentPage}}" id="active-pagination-page">{{currentPage}}</a>
		{{#isNotEqual currentPage lastPage}}
			<a href="/?page={{lastPage}}">{{lastPage}}</a>
		{{/isNotEqual}}
		{{#if hasNextPage}}
			<a href="/?page={{nextPage}}" id="next">Next</a>
		{{/if}}
	</div>
</main>