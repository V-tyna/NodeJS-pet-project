<div>
	<form class='product-form' action={{#if editing}}'/admin/edit-product'{{else}}'/admin/add-product'{{/if}} method='POST'>
		<div class='form-control'>
			<label for='title'>Title:</label>
			<input 
				{{#isError validationErrors 'title'}}
					class="invalid"
				{{/isError}}
				type='text' name='title' id='title' value="{{product.title}}" />
		</div>
		<div class='form-control'>
			<label for='imageUrl'>Image URL:</label>
			<input 
				{{#isError validationErrors 'imageUrl'}}
					class="invalid"
				{{/isError}}
				type='text' name='imageUrl' id='imageUrl' value="{{product.imageUrl}}" />
		</div>
		<div class='form-control'>
			<label for='price'>Price:</label>
			<input 
				{{#isError validationErrors 'price'}}
					class="invalid"
				{{/isError}}
				type='number' step="0.01" name='price' id='price' value="{{product.price}}" />
		</div>
		<div class='form-control'>
			<label for='description'>Description:</label>
			<textarea 
				{{#isError validationErrors 'description'}}
					class="invalid"
				{{/isError}}
				name='description' id='description' rows="5">{{product.description}}</textarea>
		</div>
    {{#if editing}}<input type="hidden" name="productId" value={{product._id}}>{{/if}}
		<input type="hidden" name="csrfToken" value={{@root.csrf}}>
		<button class="btn" type='submit'>{{#if editing}}Update Product{{else}}Add Product{{/if}}</button>
	</form>
		<div class='error__container'>
			{{#if errorValidation}}
				<h3>{{errorValidation}}</h3>
			{{/if}}
		</div>
</main>